#include <stdio.h>
#include <stdlib.h>
#include <ncurses.h>
int main()
{
    initscr();
    char mas[10][21];
    int x = 10, y = 5;
    char key;
    do
        {

            sprintf(mas[0], "####################");
            sprintf(mas[9], "####################");
            for(int i = 1; i < 9; i++)
                {
                    sprintf(mas[i], "#                  #");
                }
            mas[y][x] = '@';

            for(int i = 0; i < 10; i++)
                {
                    printw("%s\n", mas[i]);
                }
        
            key = getch();

            switch(key)
                {
                    case 'w':
                        y--;
                        break;
                    case 's':
                        y++;
                        break;
                    case 'a':
                        x--;
                        break;
                    case 'd':
                        x++;
                        break;
                }
        }
    while(key != 'e');
    endwin();
    return 0;
}
